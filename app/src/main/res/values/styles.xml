<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:windowTitleSize">5dp</item>
    </style>


    <!-- ======================= title style ========================= -->
    <style name="paragraphTitleText">
        <item name="android:textSize">14dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxWidth">500dp</item>
    </style>

    <style name="headingTitleText">
        <item name="android:textSize">36dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- ======================= inner styles ======================== -->
    <style name="CustomButtonStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/my_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:width">40dp</item>

    </style>

    <style name="paragraphText">
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:width">500dp</item>
    </style>

    <style name="headingText">
        <item name="android:textSize">28dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headingTextNotBold">
        <item name="android:textSize">28dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:width">500dp</item>
    </style>

    <style name="videoStyle">
        <item name="android:background">#616161</item>
    </style>

    <style name="slideTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#424242</item>

    </style>

</resources>
